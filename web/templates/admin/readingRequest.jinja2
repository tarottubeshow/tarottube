{% extends 'admin/base.jinja2' %}

{% block content %}
<div class="card">

    <div class="card-body">
        <h4 class="card-title">Reading Request</h4>

        <dl>
            <dt>Created</dt>
            <dd>{{ humanDateTime(request.created) }}</dd>

            <dt>Name</dt>
            <dd>{{ request.name }}</dd>
        </dl>
    </div>
</div>

<div class="card">

    <div class="card-body">
        <h4 class="card-title">Question</h4>
        <pre>{{ request.question }}</pre>
    </div>
</div>

{% endblock %}
